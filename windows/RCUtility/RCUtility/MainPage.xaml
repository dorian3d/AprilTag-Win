<Page
    x:Class="RCUtility.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RCUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Button x:Name="buttonCalibration" Content="Start Calibration" HorizontalAlignment="Right" Margin="0,72,38,0" VerticalAlignment="Top" Height="107" Width="325" FontSize="32" Click="buttonCalibration_Click"/>
		<Button x:Name="buttonCapture" Content="Start Capture" HorizontalAlignment="Right" Margin="0,257,38,0" VerticalAlignment="Top" Height="107" Width="325" FontSize="32" Click="buttonCapture_Click"/>
		<Button x:Name="buttonLive" Content="Live" HorizontalAlignment="Right" Margin="0,437,38,0" VerticalAlignment="Top" Height="107" Width="325" FontSize="32" Click="buttonLive_Click"/>
		<Button x:Name="buttonReplay" Content="Replay" HorizontalAlignment="Right" Margin="0,611,38,0" VerticalAlignment="Top" Height="107" Width="325" FontSize="32" Click="buttonReplay_Click"/>
		<TextBlock x:Name="statusText" HorizontalAlignment="Left" Margin="50,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="79" Width="968" FontSize="29.333" Text="Ready"/>
	</Grid>
</Page>
